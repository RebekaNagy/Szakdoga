<Window x:Class="P4Verification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P4Verification"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="1200">
    <Grid x:Name="mgrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Margin="10,9,250,0" 
               Content="Input betöltése fájlból:" 
               Height="26" 
               VerticalAlignment="Top"/>
        <Button Command="{Binding ReadInputCommand}" 
                Margin="50,5,0,0" 
                HorizontalAlignment="Center" 
                Width="140" Height="30" 
                VerticalAlignment="Top" 
                Content="Fájl megnyitása"/>
        <TextBox Text="{Binding Input}" 
                 Width="350" Margin="10,40,0,10"
                 HorizontalAlignment="Left" 
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto" 
                 BorderThickness="3,3,3,3" 
                 AcceptsReturn="True" 
                 AcceptsTab="True"
                 Background="#FFD4D4D4" />
        <Label Grid.Column="2" 
               Margin="13,10,0,0" 
               HorizontalAlignment="Left" 
               Width="108" Height="25" 
               VerticalAlignment="Top" 
               Content="Eredmény"/>
        <Button Command="{Binding CalculateCommand}" 
                Grid.Column="2"
                Width="140" Height="30" 
                Margin="85,5,0,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Content="Verifikáció"></Button>
        <ScrollViewer Grid.Column="2"
                      Margin="35,40,0,10">
            <TextBlock Text="{Binding Output}" 
                       Grid.Column="1" 
                       Margin="35,40,0,10" 
                       ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                       ScrollViewer.VerticalScrollBarVisibility="Visible" 
                       ScrollViewer.CanContentScroll="True"
                       HorizontalAlignment="Left" 
                       TextWrapping="Wrap" />
        </ScrollViewer>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Content="Bal oldal:" Margin="0,20,0,0"/>
                    <ComboBox Name="firstcombo" Margin="0,0,0,0"
                              ItemsSource="{Binding Rules}" 
                              SelectedItem="{Binding SelectedFirst}"
                              DisplayMemberPath="Name"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Content="Jobb oldal:" Margin="0,20,0,0"/>
                    <ComboBox Name="secondcombo" Margin="0,0,0,0"
                              ItemsSource="{Binding SelectedFirst.RuleActions}"
                              SelectedItem="{Binding SelectedSecond}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Label Content="Feltetelek:" Margin="0,20,0,0"/>
                    <ComboBox Name="thirdcombo" Margin="0,0,0,0"
                              ItemsSource="{Binding SelectedFirst.SideConditions}"
                              SelectedItem="{Binding SelectedThird}"/>
                </StackPanel>
                <Button Grid.Column="2" Grid.Row="2" Margin="0,20,10,25"
                        Content="Szabály generálása"
                        Command="{Binding GenerateRuleCommand}"/>
            </Grid>            
            <TextBlock Name="NewRule"
                       Grid.Row="1" 
                       Background="#FFD4D4D4" 
                       Margin="10,10,10,60"
                       Text="{Binding NewStringRule}"/>
            <Button Name="AddRuleButton"
                    Grid.Row="1" 
                    Margin="200,80,30,10"
                    Content="Szabály hozzáadása"
                    Command="{Binding AddRuleCommand}"/>
            <ListView Name="ruleList"
                      ItemsSource="{Binding StringRules}"
                      SelectedItem="{Binding SelectedStringRule}"
                      Grid.Row="2" Margin="0,0,0,40">
            </ListView>
            <Button Name="DeleteRule"
                    Grid.Row="2" 
                    Margin="200,200,30,5"
                    Content="Szabály törlése"
                    Command="{Binding DeleteRuleCommand}"/>
        </Grid>
    </Grid>
</Window>
